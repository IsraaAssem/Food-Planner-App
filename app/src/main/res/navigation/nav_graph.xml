<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.foodplanner.random_meal.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
        <argument
            android:name="category"
            app:argType="string"
            app:nullable="true"
            />
    </fragment>
    <fragment
        android:id="@+id/favFragment"
        android:name="com.example.foodplanner.favourites.view.FavMealFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_fav" >
        <action
            android:id="@+id/action_favFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.foodplanner.search.view.searchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/weekPlanFragment"
        android:name="com.example.foodplanner.weekPlanFragment"
        android:label="Week Plan"
        tools:layout="@layout/fragment_week_plan" />
    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.foodplanner.meal_details.view.MealDetailsFragment"
        android:label="Meal Details"
        tools:layout="@layout/fragment_meal_details" >
        <argument
            android:name="mealId"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_to_homeFragment"
        app:destination="@id/homeFragment" >
        <argument
            android:name="category"
            app:argType="string" />
    </action>
</navigation>