<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.ForgotPasswordActivity"
    >


    <EditText
        android:id="@+id/editTextForgotPasswordEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="20dp"
        android:hint="Email for send passowrd reset link."
        android:background="@drawable/edittext_background"
        android:inputType="text"
        android:minHeight="50dp"
        android:padding="10dp"
        android:drawableEnd="@drawable/baseline_email_24"
        android:drawablePadding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSendLinkPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:text="Send link"
        android:textStyle="bold"
        android:background="@drawable/button_log_sign"
        android:elevation="15dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/editTextForgotPasswordEmail"
        app:layout_constraintRight_toRightOf="@id/editTextForgotPasswordEmail"
        app:layout_constraintTop_toBottomOf="@id/editTextForgotPasswordEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>